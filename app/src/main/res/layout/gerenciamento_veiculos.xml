<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.simc.simc40.moduloGerenciamento.GerenciamentoVeiculos">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_marginTop="20dp"
                style="@style/horizontalMargin20dp">

                <ImageView
                    android:id="@+id/logo"
                    style="@style/logo"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/goBack"
                    style="@style/goBack"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/title"
                android:layout_marginTop="10dp"
                style="@style/horizontalMargin20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/titleLogo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="10dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/truck" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/titleCard"
                    android:layout_marginTop="15dp"
                    style="@style/horizontalMargin20dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="15dp">
                    <TextView
                        style="@style/mQualidadeButtonText"
                        android:text="@string/moduloGerenciamentoVeiculosTitle"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                style="@style/horizontalMargin20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/obraHeader"
                    style="@style/layoutMatchWrap"
                    app:cardBackgroundColor="@color/black">
                    <TextView
                        style="@style/mQualidadeBlackHeaderText"
                        android:text="@string/moduloGerenciamentoVeiculosTransportadora"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/obraHeader"
                    style="@style/WhiteCard">
                    <TextView
                        android:id="@+id/transportadora"
                        style="@style/WhiteCardText" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/mQualidadeWhiteViewUnderBlackHeader"
                    android:layout_below="@+id/obraHeader"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                style="@style/horizontalMargin20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/nomeModeloHeader"
                    style="@style/layoutMatchWrap"
                    app:cardBackgroundColor="@color/black">
                    <TextView
                        style="@style/mQualidadeBlackHeaderText"
                        android:text="@string/moduloGerenciamentoVeiculosPlaca"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/nomeModeloHeader"
                    style="@style/WhiteCard">
                    <TextView
                        android:id="@+id/placa"
                        style="@style/WhiteCardText" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    style="@style/mQualidadeWhiteViewUnderBlackHeader"
                    android:layout_below="@+id/nomeModeloHeader"/>
            </RelativeLayout>

            <View
                style="@style/whiteLine"/>

            <RelativeLayout
                style="@style/horTopMargin20dp">
                <androidx.cardview.widget.CardView
                    style="@style/layoutMatchWrap"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#000000"
                    android:layout_alignParentBottom="true">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/layoutMatchWrap"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="15dp">
                    <TextView
                        style="@style/mQualidadeButtonText"
                        android:text="@string/moduloGerenciamentoVeiculosTableTitle"
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <TableLayout
                android:id="@+id/tablenovaforma"
                style="@style/twoColumnTable">

                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/moduloGerenciamentoVeiculosMarca"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/marca"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/moduloGerenciamentoVeiculosModelo"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/modelo"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/moduloGerenciamentoVeiculosCapacidadeCarga"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/capacidadeCarga"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/moduloGerenciamentoVeiculosNumeroEixos"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/numeroEixos"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/moduloGerenciamentoVeiculosPeso"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/peso"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/dataCriacao"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/creation"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/autorCriacao"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/createdBy"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/ultimaModificacao"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/lastModifiedOn"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    style="@style/twoColumnTableRow">
                    <LinearLayout
                        style="@style/twoColumnTableLeftColumnLayout">
                        <TextView
                            style="@style/twoColumnTableLeftColumnTextView"
                            android:text="@string/autorModificacao"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/twoColumnTableRightColumnLayout">
                        <TextView
                            android:id="@+id/lastModifiedBy"
                            style="@style/twoColumnTableRightColumnTextView"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/reportarErro"
                app:cardBackgroundColor="@color/red"
                style="@style/mQualidadeButton">
                <TextView
                    style="@style/mQualidadeButtonText"
                    android:textColor="@color/white"
                    android:text="@string/reportarErroInformacao"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/goBackEnd"
                app:cardBackgroundColor="@color/greenButton"
                android:layout_marginBottom="20dp"
                style="@style/mQualidadeButton">
                <TextView
                    style="@style/mQualidadeButtonText"
                    android:textColor="@color/white"
                    android:text="@string/goBack"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>